<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff353432">
    <TextView
        android:text="Band Name:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bandName"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />
    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewBandName"
        android:textColor="#ffffff"
        android:background="#ff726e6a"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingTop="7.5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="7.5dp"
        android:layout_below="@+id/bandName" />
    <Button
        android:text="Add New Member"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/btnAddMember"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/txtNewBandName" />
    <Button
        android:text="Finish"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/finishCreation"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/btnAddMember" />
    <Button
        android:text="Back"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/btnBackBandNew"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonstyle"
        android:layout_below="@+id/finishCreation" />
</RelativeLayout>